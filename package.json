{
  "name": "prettier-config",
  "displayName": "PrettierConfig for VS Code",
  "description": "Generate .prettierrc.js & .prettierignore in the workspace",
  "version": "1.0.1",
  "publisher": "whosydd",
  "engines": {
    "vscode": "^1.57.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:prettier-config"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prettier-config",
        "category": "prettier-config",
        "title": "Generate .prettierrc"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "prettier-config",
          "when": "explorerResourceIsFolder",
          "group": "EditorConfig@2"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "prettier-config",
      "properties": {
        "prettier-config.gist": {
          "type": "object",
          "required": [
            "configUrl"
          ],
          "items": {
            "type": "string"
          },
          "description": "Sync configuration files from gist."
        },
        "prettier-config.tip": {
          "type": "boolean",
          "default": true,
          "description": "Toggle whether to display the prompt to install prettier."
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "prettier": "^2.3.2",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whosydd/prettier-config.git"
  },
  "icon": "icon.png",
  "keywords": [
    "prettier-config"
  ],
  "extensionDependencies": [
    "esbenp.prettier-vscode"
  ]
}
